@using Microsoft.AspNetCore.Identity
@using InternetAssignment.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
        <div class="dropdown">
              <button id="nav_font" class="dropbtn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName[0].ToString().ToUpper() !</button>
              <div class="dropdown-content">                
                <a class="link_shop_cart" asp-page="ShoppingCart">Shopping Cart</a>
                <form id="nav_font" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button id="nav_font" type="submit" class="logout_button">Logout</button>
                </form>
              </div>
        </div>

        

        

    
}
else
{
   
        <a  id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>    
        <a  id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
 
